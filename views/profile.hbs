<div class="container">
    <div class="row">
        <div id="drty-card-header" class="card col-sm-12 display-flex flex-row justify-center">
            <div class="container d-flex align-items-center" id="drty-card-header-textbox">
                <div class="row">
                    <div class="image text-center col-sm-4">
                        <img src="{{user.profile_pic}}" class="card-img my-prof img-fluid" alt="avatar"
                             style="height: 300px; object-fit: cover;">
                    </div>
                    <div class="col-sm-8 flex-column mt-2">
                        <div class="bg-light bg-opacity-75 rounded p-2" style="flex-grow: 1;">
                            <h4 class="">{{user.first_name}} {{user.last_name}}</h4>
                            <div class="" style="flex-grow: 1;">
                                <div>
                                    <span>From: {{user.user_home}}</span>
                                </div>
                                <div>
                                    <span>Age: {{user.user_age}}</span>
                                </div>
                                <div>
                                    <span>About me: {{user.about_me}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 display-flex flex-row justify-center">
                            <div>
                                <img src="/images/stampShareTrip.png" alt="Share Trip" class="mt-3" id="new-stamp-btn">
                            </div>
                            <div>
                                <img src="/images/stampAddTrip.png" alt="Add Trip" class="mt-3"
                                     id="plannedtrips-page-btn">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add the form inside a container with an ID for easy selection -->
<div id="new-stamp-form-container" style="display: none;">
    <div class="container">
        <div class="row">
            <form class="form col-sm-12 col-lg-6 display-flex flex-row new-project-form bg-light bg-opacity-75 rounded pl-4 pb-2">
                <img src="" hidden="hidden" id="ac-img">
                <label for="project-name" style="color:rgb(73, 73, 73)">Destination:</label>
                <div class="form-group d-flex justify-content">
                    <input class="typeahead form-control form-input bg-light col-lg-9" type="text" id="project-name"
                           name="project-name" placeholder="Where did you go?"/>
                </div>
                <div>
                    <label for="add-photo-btn" class="form-group d-flex" style="color:rgb(73, 73, 73)">Add
                        photos:</label>
                    <button type="click" class="btn btn-primary button-72" id="add-photo-btn">Upload Photos</button>
                </div>

                <div class="form-group ">
                    <label for="project-desc" style="color:rgb(73, 73, 73)">Share your memories:</label>
                    <textarea class="form-input bg-ligh col-lg-9 col-md-10" id="project-desc" name="project-desc"
                              placeholder="Tell us about your trip"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary button-72">Create Stamp</button>

                </div>
            </form>
        </div>
    </div>
</div>

<div id="new-future-trip-form-container" style="display: none;">
    <form class="form new-future-trip-form bg-light bg-opacity-75 w-50 rounded pl-4 pb-2">
        <img src="" hidden="hidden" id="ac-img">
        <label for="future-trip-name" style="color:rgb(73, 73, 73)">Dream Destination:</label>
        <div class="form-group d-flex justify-content">
            <input class="typeahead form-control form-input w-50 bg-light" type="text" id="future-trip-name"
                   name="future-trip-name" placeholder="What's your dream trip?"/>
        </div>
        <div>
            <label for="add-future-trip-photo-btn" class="form-group d-flex" style="color:rgb(73, 73, 73)">Add
                photos to
                keep the stoke alive!</label>
            <button type="click" class="btn btn-primary button-72" id="add-future-trip-photo-btn">Upload
                Photos
            </button>
        </div>

        <div class="form-group ">
            <label for="future-trip-desc" style="color:rgb(73, 73, 73)">Why do you want to go?:</label>
            <textarea class="form-input w-50 bg-light" id="future-trip-desc" name="future-trip-desc"
                      placeholder="Why this place?"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary button-72">Create Dream Stamp</button>

        </div>
    </form>

</div>

<!--TS Visited destinations stamps-->
<div class="container">
    <div class="row">
        <div class="card col-sm-12 display-flex flex-row justify-flex-start p-0">
            {{#each stamp as |stamps|}}
                <div class="card" style="width: 18rem;">
                    <img src="{{stamps.photo_url}}" class="card-img-top" alt="User travel photo">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/stamps/{{stamps.id}}" style="color: rgb(6, 3, 22); text-decoration: none !important;"
                                                  id="user-drty-stamp-link">{{stamps.destination_name}}</a></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<!--Visited destinations stamps-->
<div class="row align-items-stretch justify-content-between" id="make">

    {{#each stamp as |stamps|}}
        <div class="col-md-4" id="fix">
            <div class="card h-100" style="width: 19rem;" id="user-drty-card-stamp">
                <img class="card-img-top" src="{{stamps.photo_url}}" alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div style="display: flex; justify-content: center;">
                        <h5 class="card-title"><a href="/stamps/{{stamps.id}}" style="color: rgb(6, 3, 22);"
                                                  id="user-drty-stamp-link">{{stamps.destination_name}}</a></h5>

                    </div>
                    <p class="card-text">{{stamps.destination_notes}}</p>
                    <div style="display: flex; justify-content: space-between;">
                        <div>
                            <img class="" style="width:10%" data-id={{stamps.id}} src="/images/trash.png"
                                 alt="">
                            <img type="button" class="" style="width:10%" data-bs-toggle="modal"
                                 data-bs-target="#updateModal" data-stamp-id={{stamps.id}}
                                 src="/images/Pencil.png">


                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{!-- modal --}}
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="update-form">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="notes-update" class="form-label">Update Notes</label>
                        <input type="text" class="form-control" id="notes-update" placeholder="notes">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" id="updateBtn" data-bs-target="#deleteModal">
                        Update
                    </button>
                </div>
            </form>


        </div>
    </div>
</div>

<!-- Toast -->
<div id="share-trip-toast" class="toast bg-light" role="alert" aria-live="assertive" aria-atomic="true"
     style="position: fixed; top: 10px; right: 30px;">
    <div class="toast-header">
        <strong class="me-auto">Picture</strong>
        <smal>Just now</smal>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        Success! The picture has been uploaded.
    </div>
</div>

