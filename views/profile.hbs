<div class="card mb-3" id="drty-card">
    <div class="row no-gutters" id="drty-card-header">
        <div class="col-md-3">
            <img src="{{user.profile_pic}}" class="card-img my-prof img-fluid" alt="avatar"
                 style="height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-3" id="drty-card-header-textbox">
            <div class="card-body">
                <h1 class="card-title"> {{user.first_name}} {{user.last_name}}</h1>
                <h4 class="card-text"> {{user.user_home}}</h4>
                <h7 class="card-text"> Age:{{user.user_age}}</h7>
                <p class="card-text" style="color:black;">About me: {{user.about_me}}</p>
            </div>
        </div>
    </div>
</div>

<!-- Stamps -->

<div class="col-sm-12 display-flex flex-row justify-center mt-3">
    <div>
        <!--    <button id="new-stamp-btn" class="btn btn-block btn-danger button-72" style="padding-bottom: 20px;">Create a new-->
        <!--        destination stamp-->
        <!--    </button>-->
        <img src="/images/stampShareTrip.png" alt="Share Trip" id="new-stamp-btn">

    </div>
    <div>
        <!--    <button id="plannedtrips-page-btn" class="btn btn-block btn-danger button-72" style="padding-bottom: 20px;">Head to-->
        <!--        our future trip page to plan some trips!-->
        <!--    </button>-->
        <img src="/images/stampAddTrip.png" alt="Add Trip" id="plannedtrips-page-btn">
    </div>
</div>


<!-- Add the form inside a container with an ID for easy selection -->
<div id="new-stamp-form-container" style="display: none;">
    <form class="form new-project-form bg-light bg-opacity-75 w-50 rounded pl-4 pb-2">
        <img src="" hidden="hidden" id="ac-img">
        <label for="project-name" style="color:rgb(73, 73, 73)">Destination:</label>
        <div class="form-group d-flex justify-content">
            <input class="typeahead form-control form-input w-50 bg-light" type="text" id="project-name"
                   name="project-name" placeholder="Where did you go?"/>
        </div>
        <div>
            <label for="add-photo-btn" class="form-group d-flex" style="color:rgb(73, 73, 73)">Add photos:</label>
            <button type="click" class="btn btn-primary button-72" id="add-photo-btn">Upload Photos</button>
        </div>

        <div class="form-group ">
            <label for="project-desc" style="color:rgb(73, 73, 73)">Share your memories:</label>
            <textarea class="form-input w-50 bg-light" id="project-desc" name="project-desc"
                      placeholder="Tell us about your trip"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary button-72">Create Stamp</button>

        </div>
    </form>

</div>

<div id="new-future-trip-form-container" style="display: none;">
    <form class="form new-future-trip-form bg-light bg-opacity-75 w-50 rounded pl-4 pb-2">
        <img src="" hidden="hidden" id="ac-img">
        <label for="future-trip-name" style="color:rgb(73, 73, 73)">Dream Destination:</label>
        <div class="form-group d-flex justify-content">
            <input class="typeahead form-control form-input w-50 bg-light" type="text" id="future-trip-name"
                   name="future-trip-name" placeholder="What's your dream trip?"/>
        </div>
        <div>
            <label for="add-future-trip-photo-btn" class="form-group d-flex" style="color:rgb(73, 73, 73)">Add photos to
                keep the stoke alive!</label>
            <button type="click" class="btn btn-primary button-72" id="add-future-trip-photo-btn">Upload Photos</button>
        </div>

        <div class="form-group ">
            <label for="future-trip-desc" style="color:rgb(73, 73, 73)">Why do you want to go?:</label>
            <textarea class="form-input w-50 bg-light" id="future-trip-desc" name="future-trip-desc"
                      placeholder="Why this place?"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary button-72">Create Dream Stamp</button>

        </div>
    </form>

</div>


<div class="row align-items-stretch justify-content-between" id="make">

    {{#each stamp as |stamps|}}
        <div class="col-md-4" id="fix">
            <div class="card h-100" style="width: 19rem;" id="user-drty-card-stamp">
                <img class="card-img-top" src="{{stamps.photo_url}}" alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div style="display: flex; justify-content: center;">
                        <h5 class="card-title"><a href="/stamps/{{stamps.id}}" style="color: rgb(6, 3, 22);"
                                                  id="user-drty-stamp-link">{{stamps.destination_name}}</a></h5>

                    </div>
                    <p class="card-text">{{stamps.destination_notes}}</p>
                    <div style="display: flex; justify-content: space-between;">
                        <div>
                            <img class="" style="width:10%" data-id={{stamps.id}} src="/images/trash.png" alt="">
                            <img type="button" class="" style="width:10%" data-bs-toggle="modal"
                                 data-bs-target="#updateModal" data-stamp-id={{stamps.id}} src="/images/Pencil.png">


                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{!-- modal --}}
<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form class="update-form">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="notes-update" class="form-label">Update Notes</label>
                        <input type="text" class="form-control" id="notes-update" placeholder="notes">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" id="updateBtn" data-bs-target="#deleteModal">Update
                    </button>
                </div>
            </form>


        </div>
    </div>
</div>


