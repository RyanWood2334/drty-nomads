<div class="hero-image">
    <div class="logo-container">
  <img src="/images/Cropped.png" alt="Logo" class="centered-image fit-image" style="width: 50%;">
  <div class="button-container">
</div>

<div class="container">
  <div class="row">
    {{#each users}}
      <div class="col-md mb-4">
        <div class="card" style="width: 300px;">
          <img src="{{this.profile_pic}}" class="card-img-top img-fluid" alt="{{this.first_name}}'s profile picture" style="object-fit: cover; max-width: 100%; max-height: 100%; height: 200px;">
          <div class="card-body">
            <h5 class="card-title"><a href="/users/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></h5>
            <p class="card-text">{{this.about_me}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
