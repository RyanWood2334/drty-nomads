<div class="hero-image">
  <div class="logo-container">
    <img src="/images/Cropped.png" alt="Logo" class="centered-image fit-image" style="width: 50%;">
    <div class="button-container">
    </div>

    <div class="container">
      <div class="row align-items-stretch justify-content-between">
        {{#each users}}
        <div class="col-md-4" id="fix">
    <div class="card h-100" style="width: 19rem;" id="user-drty-card-stamp">
            <img src="{{this.profile_pic}}" class="card-img-top img-fluid" alt="{{this.first_name}}'s profile picture"
              style="object-fit: cover; max-width: 100%; max-height: 100%; height: 200px;">
            <div class="card-body" id="drty-card-textbox" id="drty-card" id="drty-card-home">
              <h5 class="card-title"><a href="/users/{{this.id}}" style="color:black">{{this.first_name}}
                  {{this.last_name}}</a></h5>
              <p class="card-text">{{this.about_me}}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>